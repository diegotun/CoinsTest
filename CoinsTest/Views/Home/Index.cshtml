@model IEnumerable<Items>


<div><a asp-controller="home" asp-action="downloadAll" class="btn btn-primary m-1">Download CSV</a></div>
<input type="text" class="myInput" id="myInput" onkeyup="myFunction()" placeholder="Search for coin name..">

<table class="table table-hover table-bordered" id="myTable">
    <tr class="header bg-dark text-white">
        <th scope="col" style="width:60%;">Name</th>
        <th scope="col" style="width:40%;">Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td scope="row">
                @item.Name
            </td>
            <td>
                <a asp-controller="home" asp-action="details" asp-route-id="@item.Id" class="btn btn-primary m-1">View</a>
            </td>
        </tr>
    }
</table>
@section Scripts{
    <script src="~/js/js.js"></script>
}

